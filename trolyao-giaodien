import tkinter as tk
from tkinter import *

root = tk.Tk()
root.title("Chatbot")

# Tạo một frame để chứa chat history
chat_history = tk.Frame(root)
chat_history.pack(padx=10, pady=10)

# Tạo một scrollbar cho chat history
scrollbar = tk.Scrollbar(chat_history)
scrollbar.pack(side=tk.RIGHT, fill=tk.Y)

# Tạo một Text widget để hiển thị chat history
chat_history_text = tk.Text(chat_history, yscrollcommand=scrollbar.set)
chat_history_text.pack(side=tk.LEFT, fill=tk.BOTH)
scrollbar.config(command=chat_history_text.yview)

# Tạo một frame để chứa input và send button
input_frame = tk.Frame(root)
input_frame.pack(padx=10, pady=10)

# Tạo một Text widget để nhập input
input_text = tk.Text(input_frame, height=3)
input_text.pack(side=tk.LEFT, fill=tk.BOTH, expand=True)

# Tạo một button để gửi input
send_button = tk.Button(input_frame, text="Send")
send_button.pack(side=tk.RIGHT)

root.mainloop()
def send_message(event):
    # Lấy input từ input_text widget
    input_message = input_text.get("1.0", "end-1c").strip()

    # Hiển thị input trong chat history
    chat_history_text.insert(tk.END, "You: " + input_message + "\n")

    # Gửi input đến trợ lý ảo và lấy câu trả lời
    bot_response = response(input_message)

    # Hiển thị câu trả lời trong chat history
    chat_history_text.insert(tk.END, "Bot: " + bot_response + "\n")

    # Xóa input_text widget
    input_text.delete("1.0", tk.END)

# Thiết lập sự kiện cho send button
send_button.bind("<Button-1>", send_message)

# Thiết lập sự kiện cho input_text widget
input_text.bind("<Return>", send_message)

def send_message(event=None):
    # Lấy nội dung tin nhắn từ Entry
    message = entry.get()

    # Xóa nội dung trong Entry
    entry.delete(0, END)

    # Hiển thị tin nhắn trong khung chat
    chat_box.insert(END, "You: " + message + "\n")

    # Gửi tin nhắn cho trợ lý ảo
    response = get_bot_response(message)

    # Hiển thị phản hồi từ trợ lý ảo trong khung chat
    chat_box.insert(END, "Bot: " + response + "\n")

# Tạo cửa sổ giao diện
root = Tk()

# Tạo khung chat
chat_box = Text(root)
chat_box.pack()

# Tạo Entry để nhập tin nhắn
entry = Entry(root)
entry.pack()

# Gán hàm send_message vào sự kiện khi ấn phím Enter
entry.bind("<Return>", send_message)

# Tạo nút Send để gửi tin nhắn
send_button = Button(root, text="Send", command=send_message)
send_button.pack()

# Khởi chạy cửa sổ giao diện
root.mainloop()
